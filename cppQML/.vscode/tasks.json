{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "open-in-qt-design-studio",
            "detail": "This task first builds the project and then opens it in Qt Design Studio.\nNeed to have the Qt Design Studio installed on your system.",
            "command": "qtdesignstudio",
            "type": "process",
            "isBackground": true,
            "args": [
                "${workspaceFolder}/__change__.pro"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "build-debug-local"
            ],
            "icon": {
                "id": "link-external",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "group": "build-execution"
            }
        },
        {
            "label": "open-in-qt-creator",
            "detail": "This task first builds the project and then opens it in Qt Creator (for local development/debug).\nNeed to have the Qt Creator installed on your system.",
            "command": "qtcreator",
            "type": "process",
            "options": {
                "env": {
                    "QT_QPA_PLATFORM": "xcb",
                    "QT_QUICK_BACKEND": "software"
                }
            },
            "args": [
                "${workspaceFolder}",
                "-settingspath",
                "${workspaceFolder}/.qt",
                "-theme",
                "dark"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "build-debug-local",
                "update-qt-ini-local"
            ],
            "icon": {
                "id": "link-external",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "group": "build-execution"
            }
        },
